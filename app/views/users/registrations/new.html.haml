%h2 Sign up!
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "users/shared/error_messages", resource: resource
  .field
    = f.text_field :name, autofocus: true, placeholder: "Name", class: "SignUpInput"
  .field
    = f.email_field :email, autocomplete: "email", placeholder: "Email", class: "SignUpInput"
  .field
    -# - if @minimum_password_length
    -#   %em
    -#     (#{@minimum_password_length} characters minimum)
    = f.password_field :password, autocomplete: "new-password", placeholder: "Password(6文字以上)", class: "SignUpInput"
  .field
    = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password(確認用)", class: "SignUpInput"
  .actions
    = f.submit "Signup!", class: "SignUpBtn"


